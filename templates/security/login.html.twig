{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    
    <div class=" rounded-lg bg-light w-50 mx-auto mt-5 border-top border-success shadow-lg">
        <h1 class="h3 m-3 font-weight-normal text-success text-center">Please sign in</h1>
        <div class="text-success text-center">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control w-25 mx-auto border border-success" required autofocus>
        </div>
        <div class="text-success text-center mt-3">
            <label for="inputPassword" class="text-center">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control w-25 mx-auto border border-success" required>
        </div>
            <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    
        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html
 #}

        <div class="d-flex flex-column">
            <div class="checkbox mb-3 d-flex mx-auto">
                <label class="text-success text-center">
                    <input type="checkbox" name="_remember_me" class="border border-success"> Remember me
                </label>
            </div>
            <button class="btn btn-lg btn-success text-light shadow type="submit">Sign in</button>
        </div>
    </div>

</form>
{% endblock %}
